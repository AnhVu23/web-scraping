    "lib": ["es5", "es6", "es2017", "dom"],
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "build",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
